{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "allowImportingTsExtensions": true,
        "esModuleInterop": true,
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "allowJs": false,
        "strict": true,
        "noEmit": true,
        "types": ["vinxi/types/spa"],
        "isolatedModules": true,
        "paths": {
            "~/*": ["./src/*"]
        }
    }
}
